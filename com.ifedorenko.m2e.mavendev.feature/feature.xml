<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="com.ifedorenko.m2e.mavendev.feature"
      label="Maven Development Tools"
      version="0.5.0.qualifier"
      provider-name="Igor Fedorenko">

   <description url="https://github.com/ifedorenko/com.ifedorenko.m2e.mavendev">
      Maven Development Tools is a collection of m2e extensions that enables 
end-to-end debugging of Maven Plugins, Maven Core and their dependencies from
m2e development workspace, without the need to install artifacts to the local
Maven repository.
   </description>

   <copyright>
      %copyright
   </copyright>

   <license url="%licenseURL">
      %license
   </license>

   <includes
         id="io.takari.stats.m2e.feature"
         version="0.0.0"/>

   <requires>
      <import feature="org.eclipse.jdt" version="3.8.0" match="compatible"/>
      <import feature="org.sonatype.m2e.mavenarchiver.feature" version="0.15.0" match="compatible"/>
      <import feature="com.ifedorenko.m2e.sourcelookup.feature" version="1.1.0"/>
   </requires>

   <plugin
         id="com.ifedorenko.m2e.mavendev"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="com.ifedorenko.m2e.mavendev.junit.runtime"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="com.ifedorenko.m2e.mavendev.launch.ui"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="com.ifedorenko.m2e.mavendev.launch.ui.eventspy"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

</feature>
